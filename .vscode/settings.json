{
    // File paths to language mappings
    "files.associations": {
        // bazaar
        "**/.bazaar/*.conf": "ini",
        // curl
        ".curlrc": "properties",
        // cygwin
        ".startxwinrc": "shellscript",
        // dig
        ".digrc": "properties",
        // editline
        ".editrc": "properties",
        // git
        ".gitconfig*": "gitconfig",
        // htop
        "htoprc": "properties",
        // irssi
        "**/.irssi/*": "perl",
        // less
        ".lesskey": "properties",
        // mysql
        ".my.cnf": "ini",
        // npm
        ".npmrc": "properties",
        // openssh
        "**/openssh/.ssh/config": "ssh_config",
        "**/openssh/.ssh/includes/*": "ssh_config",
        "**/openssh/.ssh/templates/*": "ssh_config",
        // openssl
        "**/openssl/*.cnf": "ini",
        // pgsql
        ".psqlrc": "postgres",
        // pip
        "pip.conf": "ini",
        // quilt
        ".quiltrc": "shellscript",
        // readline
        ".inputrc": "properties",
        // sbuild
        ".mk-sbuild.rc": "shellscript",
        // shellcheck
        ".shellcheckrc": "properties",
        // wget
        ".wgetrc": "properties",
        // wsl
        ".wslconfig": "ini",
        "wsl.conf": "ini",
        // xdg-user-dir
        "user-dirs.dirs": "shellscript"
    },

    "powershell.scriptAnalysis.settingsPath": ".vscode\\PSScriptAnalyzerSettings.psd1",

    "[bat]": {
        "editor.rulers": [79],
    },

    "[shellscript]": {
        "editor.rulers": [79],
    }
}
