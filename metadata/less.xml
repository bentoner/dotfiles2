<?xml version="1.0" encoding="utf-8"?>
<Component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ralish/PSDotFiles/main/Metadata.xsd">
    <FriendlyName>less</FriendlyName>

    <Detection>
        <Method>FindInPath</Method>
    </Detection>

    <InstallPath>
        <HideSymlinks>true</HideSymlinks>
    </InstallPath>

    <AdditionalPaths>
        <AdditionalPath source=".less">
            <TargetPath symlink="_less" />
        </AdditionalPath>

        <AdditionalPath source=".lesskey">
            <TargetPath symlink="_lesskey" />
        </AdditionalPath>
    </AdditionalPaths>
</Component>
