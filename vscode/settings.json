{
    // Text Editor
    "editor.dragAndDrop": false,
    "editor.emptySelectionClipboard": false,
    "editor.parameterHints.cycle": true,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "boundary",
    "editor.wrappingIndent": "indent",

    // Text Editor: Cursor
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line-thin",

    // Text Editor: Diff Editor
    "diffEditor.ignoreTrimWhitespace": false,

    // Text Editor: Find
    "editor.find.autoFindInSelection": "multiline",
    "editor.find.seedSearchStringFromSelection": "never",

    // Text Editor: Minimap
    "editor.minimap.showSlider": "always",
    "editor.minimap.size": "fit",

    // Text Editor: Suggestions
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.suggestSelection": "first",

    // Text Editor: Files
    "files.associations": {
        // Configuration files (usually INI syntax)
        "*.cnf": "ini",
        "*.inf": "ini",
        // NuGet restore cache files
        "project.nuget.cache": "json"
    },
    "files.autoSave": "onWindowChange",
    "files.hotExit": "onExitAndWindowClose",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // Workbench
    "workbench.editor.untitled.hint": "hidden",
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "readme",
    "workbench.editorAssociations": {
        "git-rebase-todo": "default",
        "*.ipynb": "jupyter-notebook"
    },

    // Workbench: Appearance
    "workbench.iconTheme": "vscode-icons",

    // Workbench: Editor Management
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.languageDetection": false,

    // Workbench: Settings Editor
    "workbench.settings.editor": "json",
    "workbench.settings.enableNaturalLanguageSearch": false,

    // Window: New Window
    "window.newWindowDimensions": "inherit",

    // Features: Explorer
    "explorer.autoReveal": "focusNoScroll",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",

    // Features: Search
    "search.collapseResults": "auto",
    "search.smartCase": true,

    // Features: Terminal
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontFamily": "Hack NF",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.rightClickBehavior": "paste",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-NoLogo"]
        }
    },

    // Features: Remote
    "remote.autoForwardPorts": false,

    // Application: Update
    "update.mode": "start",

    // Application: Telemetry
    "telemetry.telemetryLevel": "off",

    // Built-in extension: Git
    "git.autoStash": true,
    "git.enableSmartCommit": true,
    "git.timeline.date": "authored",

    // Built-in extension: PHP Language Features
    "php.validate.executablePath": "C:\\DevEnvs\\PHP\\php.exe",

    // Built-in extension: TypeScript and JavaScript Language Features
    "typescript.surveys.enabled": false,

    // Extension: C/C++
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.loggingLevel": "Warning",

    // Extension: C#
    "csharp.suppressHiddenDiagnostics": false,
    // Disabled due to conflict with Visual Studio
    // https://github.com/OmniSharp/omnisharp-roslyn/issues/2230
    "omnisharp.enableEditorConfigSupport": false,
    "omnisharp.enableRoslynAnalyzers": true,
    "omnisharp.loggingLevel": "warning",

    // Extension: CloudFormation Linter
    "cfnLint.validateUsingJsonSchema": true,

    // Extension: CMake Tools
    "cmake.configureOnOpen": false,

    // Extension: DevSkim
    "devskim.enableBestPracticeRules": true,
    "devskim.enableManualReviewRules": true,
    "devskim.removeFindingsOnClose": true,

    // Extension: GitLens
    "gitlens.defaultDateStyle": "absolute",

    // Extension: Java Extension Pack
    "java.help.showReleaseNotes": false,

    // Extension: Language Support for Java(TM) by Red Hat
    "java.configuration.checkProjectSettingsExclusions": false,
    "java.project.importHint": false,

    // Extension: markdownlint
    "markdownlint.config": {
        // Header style
        "MD003": { "style": "setext_with_atx" },
        // Trailing spaces
        "MD009": { "br_spaces": 2 },
        // Line length
        "MD013": false,
        // Trailing punctuation in header
        "MD026": { "punctuation": ".,;:!" }
    },

    // Extension: PowerShell
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.newLineAfterCloseBrace": false,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
    "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
    "powershell.codeFormatting.useCorrectCasing": true,
    "powershell.codeFormatting.whitespaceBetweenParameters": true,
    "powershell.integratedConsole.forceClearScrollbackBuffer": true,
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.suppressStartupBanner": true,
    "powershell.pester.useLegacyCodeLens": false,
    "powershell.scriptAnalysis.settingsPath": "C:\\Users\\SDL\\dotfiles\\posh\\PSScriptAnalyzerSettings.psd1",

    // Extension: Python
    "python.experiments.enabled": true,
    "python.languageServer": "Pylance",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintCategorySeverity.refactor": "Information",
    "python.pythonPath": "~/dotfiles/vscode/venv",
    "python.defaultInterpreterPath": "~/dotfiles/vscode/venv",

    // Extension: Red Hat Commons
    "redhat.telemetry.enabled": false,

    // Extension: Remote - Containers
    "dotfiles.installCommand": "dot-update -a",
    "dotfiles.repository": "ralish/dotfiles",

    // Extension: Remote - SSH
    "remote.SSH.defaultExtensions": [
        "tomoki1207.selectline-statusbar"
    ],

    // Extension: Remote - WSL
    "remote.WSL.useShellEnvironment": false,

    // Extension: Select Line Status Bar
    "selectline.alignment": "right",
    "selectline.displayFormat": "%d lines",
    "selectline.statusbarPriority": 200,

    // Extension: shell-format
    "shellformat.useEditorConfig": true,

    // Extension: ShellCheck
    "shellcheck.customArgs": [
        // Permit following source directives
        "-x"
    ],
    "shellcheck.useWorkspaceRootAsCwd": true,

    // Extension: SonarLint
    "sonarlint.disableTelemetry": true,
    "sonarlint.rules": {
        // Remove commented out code
        "javascript:S125": {
            "level": "off"
        }
    },

    // Extension: Visual Studio IntelliCode
    "vsintellicode.features.python.deepLearning": "enabled",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // Extension: vscode-icons
    "vsicons.associations.files": [
        {
            "icon": "git",
            "extensions": [".git-blame-ignore-revs"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "json",
            "extensions": ["project.nuget.cache"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "markdownlint",
            "extensions": [".markdownlintrc"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "xml",
            "extensions": ["app.manifest"],
            "filename": true,
            "format": "svg"
        }
    ],
    "vsicons.dontShowNewVersionMessage": true,

    // Extension: XML
    "xml.codeLens.enabled": true,
    "xml.validation.resolveExternalEntities": true,

    // Extension: XML Tools
    "xmlTools.enforcePrettySelfClosingTagOnFormat": true,
    "xmlTools.removeCommentsOnMinify": true,

    // Extension: YAML
    "yaml.format.singleQuote": true,
    // Present due to limitations in the CloudFormation Linter extension. See:
    // https://github.com/aws-cloudformation/cfn-lint-visual-studio-code/issues/213
    "yaml.customTags": [
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence"
    ],
    // Present due to limitations in the CloudFormation Linter extension. See:
    // https://github.com/aws-cloudformation/cfn-lint-visual-studio-code/issues/214
    "yaml.validate": false,

    "[git-commit]": {
        // Configure Rewrap extension
        "rewrap.autoWrap.enabled": true,
        "rewrap.wrappingColumn": 72
    },

    "[html]": {
        // Use VS Code's built-in formatter
        "editor.defaultFormatter": "vscode.html-language-features"
    },

    "[javascript]": {
        // Use VS Code's built-in formatter
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    "[json]": {
        // Use VS Code's built-in formatter
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "[jsonc]": {
        // Use VS Code's built-in formatter
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "[markdown]": {
        // Use Markdown All in One extension for formatting
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",

        // Trailing whitespace has special meaning
        "files.trimTrailingWhitespace": false,

        // Don't restore the last editor view state
        "workbench.editor.restoreViewState": false
    },

    "[python]": {
        "editor.codeActionsOnSave": {
            // Organise imports with isort
            "source.organizeImports": true
        }
    },

    "[xml]": {
        // Use Red Hat XML extension for formatting
        "editor.defaultFormatter": "redhat.vscode-xml"
    },

    "[yaml]": {
        // Use Red Hat YAML extension for formatting
        "editor.defaultFormatter": "redhat.vscode-yaml"
    }
}
