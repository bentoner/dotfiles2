<ViewerConfig>
  <QueryConfig>
    <QueryParams>
      <UserQuery />
    </QueryParams>
    <QueryNode>
      <Name ResourceId="%windir%\system32\svrmgrnc.dll,-432">Active Directory Domain Services</Name>
      <Description ResourceId="%windir%\system32\svrmgrnc.dll,-433">System events for Active Directory Domain Services</Description>
      <SuppressQueryExecutionErrors>1</SuppressQueryExecutionErrors>
      <QueryList>
        <Query>
          <Select Path="Directory Service">*[System[Provider[@Name='Microsoft-Windows-ActiveDirectory_DomainService']]]</Select> 
          <Select Path="Directory Service">*[System[Provider[@Name='NTDS ISAM']]]</Select> 
          <Select Path="Active Directory Web Services">*[System[Provider[@Name='ADWS']]]</Select> 

        <!-- BEGIN - DNS events from //depot/winmain/ds/dns/server/server/DnsServer.Events.xml -->
          <Select Path="DNS Server">*[System[Provider[@Name='Microsoft-Windows-DNS-Server-Service']]]</Select>
        <!-- END - DNS events from //depot/winmain/ds/dns/server/server/DnsServer.Events.xml -->

        <!-- BEGIN - DFS events from //depot/winmain/base/fs/remotefs/admin/storagemgmt/FSRoleEventView/FileServer.Events.xml -->
          <Select Path="DFS Replication">*[System[Provider[@Name='DFS Replication']]]</Select>
          <Select Path="DFS Replication">*[System[Provider[@Name='DFSR']]]</Select>
        <!-- END - DFS events from //depot/winmain/base/fs/remotefs/admin/storagemgmt/FSRoleEventView/FileServer.Events.xml -->

        <!-- NTFRS events BEGIN -->    
          <Select Path="File Replication Service">*[System[Provider[@Name='File Replication Service']]]</Select>
          <Select Path="File Replication Service">*[System[Provider[@Name='NtFrs']]]</Select>
        <!-- NTFRS events END -->
        </Query>
      </QueryList>
    </QueryNode>
  </QueryConfig>
</ViewerConfig>