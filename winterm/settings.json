{
    "$schema": "https://aka.ms/terminal-profiles-schema",

    // Window
    "launchMode": "maximized",
    "initialCols": 120,
    "initialRows": 30,
    "rowsToScroll": "system",
    "snapToGridOnResize": true,

    // Tabs
    "alwaysShowTabs": true,
    "showTabsInTitlebar": true,
    "showTerminalTitleInTitlebar": false,
    "confirmCloseAllTabs": true,
    "tabWidthMode": "equal",

    // Selection
    "copyOnSelect": true,
    "copyFormatting": false,

    // Terminal profiles
    "defaultProfile": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",
    "profiles": {
        "defaults": {
            "colorScheme": "Solarized Dark",
            "fontFace": "Hack",
            "fontSize": 10
        },

        "list": [
            {
                "guid": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",
                "name": "PowerShell",
                "source": "Windows.Terminal.PowershellCore",

                "commandline": "pwsh.exe",
                "icon": "ms-appx:///ProfileIcons/{574e775e-4f2a-5b96-ac1e-a2962a402336}.png"
            },
            {
                "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
                "name": "Windows PowerShell"
            },
            {
                "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
                "name": "Command Prompt"
            },
            {
                "name": "Git Bash",
                "guid": "{6450ef44-0210-4802-8580-a99ebeed2849}",

                "commandline": "%ProgramFiles%/Git/usr/bin/bash.exe --login -i",
                "icon": "%ProgramFiles%/Git/mingw64/share/git/git-for-windows.ico",
                "startingDirectory": "%USERPROFILE%"
            },
            {
                "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
                "name": "Azure Cloud Shell",
                "source": "Windows.Terminal.Azure",
                "hidden": true
            }
        ]
    },

    // Colour schemes
    "theme": "dark",
    "schemes": [],

    // Key bindings
    "keybindings": [
        // Add copy & paste key bindings for the default shortcut keys
        { "command": {"action": "copy", "singleLine": false }, "keys": "ctrl+c" },
        { "command": "paste", "keys": "ctrl+v" },

        // Open a new pane using the focused pane's profile and maximising surface area
        { "command": { "action": "splitPane", "split": "auto", "splitMode": "duplicate" }, "keys": "alt+shift+d" }
    ]
}
